<style-scheme id="gcode" _name="G-Code" version="1.0">
	<author>Fernand Veilleux</author>
  <_description>HighLight theme for G-Code.</_description>

  <style name="bracket-match" foreground="#000000" background="#FFFF00" bold="true"/>
  <style name="bracket-mismatch" background="#ff4b52" underline="true"/>
  <style name="current-line" foreground="#000000" background="#FFE0BB"/>
  <style name="cursor" foreground="#000000"/>
  <style name="line-numbers" foreground="#000000" background="#c4c2c2"/>
  <style name="search-match" foreground="#000000" background="#fffd8c" bold="true" underline="true"/>
  <style name="selection" foreground="#000000" background="#ccff99"/>
  <style name="text" foreground="#505050" background="#fcfcfc"/>

  <style name="def:base-n-integer" foreground="#0066ff"/>
  <style name="def:boolean" foreground="#000000" bold="true"/>
  <style name="def:builtin" foreground="#9700cc"/>
  <style name="def:character" foreground="#009933"/>
  <style name="def:comment" foreground="#757473" italic="true"/>
  <style name="def:complex" foreground="#A57800"/>
  <style name="def:constant" foreground="#800080" bold="true"/>
  <style name="def:decimal" foreground="#0066ff"/>
  <style name="def:doc-comment" foreground="#0066ff" italic="true"/>
  <style name="def:doc-comment-element" foreground="#0066ff" italic="true"/>
  <style name="def:error" foreground="#BF0303" underline="true"/>
  <style name="def:floating-point" foreground="#0066ff" bold="true"/>
  <style name="def:function" foreground="#800080" bold="true" italic="true"/>
  <style name="def:keyword" foreground="#505050" bold="true" italic="true"/>
  <style name="def:note" foreground="#1F1C1B" italic="true"/>
  <style name="def:number" foreground="#0000D8" bold="false"/>
  <style name="def:operator" foreground="#000080" bold="true"/>
  <style name="def:reserved" foreground="#333333" bold="true"/>
  <style name="def:shebang" foreground="#ff4b52" italic="true"/>
  <style name="def:special-char" foreground="#6782d3"/>
  <style name="def:special-constant" foreground="#9700cc"/>
  <style name="def:statement" foreground="#BB7B40"/>
  <style name="def:string" foreground="#1F1C1B"/>
  <style name="def:type" foreground="#976D00" bold="true"/>
</style-scheme>
