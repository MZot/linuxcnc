[SUBROUTINE]
version = 1.14
icon = tool-01.png
name = _("End Mill Change")
type = emill_chng
help = _("<b>Change end mill and/or settings</b>&#10;Changes setting accordingly even if disabled")
order = act dnum tlc feed v_feed speed h6 so_n so_m h5 pen stp pr h7 px py pz pzfloat

[PARAM_ACT]
name = _("Active")
icon = enable.png
type = bool
value = 1
tool_tip = _("Params will be set even if disabled")

[PARAM_H1]
name = _("Select end mill")
type = sub-header
hidden = 1

[PARAM_H2]
name = _("Action")
type = sub-header
hidden = 1

[PARAM_H4]
name = _("Feed and speed")
type = sub-header
hidden = 1

[PARAM_H5]
name = _("Penetration")
type = sub-header

[PARAM_H6]
name = _("Milling step over")
type = sub-header
tool_tip = _("Step over for pocketing and finishing")

[PARAM_H7]
name = _("Position")
type = sub-header
tool_tip = _("Position for toolchange")

[PARAM_PX]
name = _("Toolchange X")
header = h7
type = gcode
value = _("#<_x>")
tool_tip = _("Position for toolchange")

[PARAM_PY]
name = _("Toolchange Y")
header = h7
type = gcode
value = _("#<_y>")
tool_tip = _("Position for toolchange")

[PARAM_PZFLOAT]
name = _("Z")
header = h7
type = float
value = 150.
tool_tip = _("Position for toolchange")
hidden = 1

[PARAM_PZ]
name = _("Toolchange Z")
type = combo-user
options = _("User defined=0:Max Z=1")
tool_tip = _("Max Z limit or user defined")
value = 1
header = h7
links = pzfloat=0

[PARAM_DNUM]
name = _("Tool number")
header = h1
type = tool
icon = tool.png
tool_tip = _("Select from tool table")
value = 0

[PARAM_US]
name = _("Usage")
header = h1
type = combo
options = _("Roughing and finishing=0:Roughing=1:Finishing=2")
tool_tip = _("Select usage for this tool")
value = 0
icon = tool-usage.png
hidden = 1

[PARAM_DD]
name = _("Dynamic diameter")
header = h1
type = float
tool_tip = _("Only for dynamic compensation, 0.0 to use diameter from table")
value = 0.0
metric_value = 0.0
minimum_value = 0.0
icon = tool-d.png
hidden = 1

[PARAM_TLC]
name = _("Use length comp")
icon = comp-l.png
type = combo
options = _("No=0:Already mounted and touched=3:From tool table=1:Table and probe=2")
header = h2
value = 1
tool_tip = _("Use G43 and probe if setup")
hidden = 1

[PARAM_COOLING]
name = _("Use cooling")
