            tab_main.append( ( 6, "btn_tool_touchoff_x1" ) )
            tab_main.append( ( 2, "btn_set_tool_change_pos" ) )

        self.h_tabs.append( tab_main )

        tab_mdi = [( 9, "btn_show_kbd" )]
        self.h_tabs.append( tab_mdi )

