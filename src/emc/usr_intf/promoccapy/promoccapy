        #self.widgets.ntb_info.set_current_page( 0 )
        #self.widgets.ntb_jog.set_current_page( NTB_JOG_DEFAULT )
        self.widgets.togglebuttonPWR.set_active(False)

    def on_hal_status_state_on( self, widget ):
