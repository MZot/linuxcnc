    def on_hal_status_state_off( self, widget ):
        widgetlist = ["btn_homing",
                      "hbox_jog_vel", "tbl_jog_btn", "vbtb_jog_incr",
                      "btn_select_tool_by_no",
                      "btn_tool_touchoff_x1", "btn_tool_touchoff_z1", "btn_touch1",
