        panel = gladevcp.makepins.GladePanel( self.halcomp, XMLNAME, self.builder, None )

        self.halcomp.ready()

        # this are settings to be done before window show
        self._init_preferences()

        #self.widgets.tooledit1.wTree.get_object("tooledit_box") )

